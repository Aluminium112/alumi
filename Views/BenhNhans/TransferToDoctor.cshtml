@model Hospital.Models.ToaThuoc

@{
    ViewData["Title"] = "Chuyển BN";
    var benhNhan = ViewData["benhNhan"] as Hospital.Models.BenhNhan;
 }

<h1>Chuyển bệnh nhân đến phòng khám</h1>

<h4>BenhNhan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="TransferToDoctor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="text" value="@benhNhan.Id" name="IdBenhNhan" />
            <div class="form-group">
                <label class="control-label">Họ</label>
                <input value="@benhNhan.Ho" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label class="control-label">Tên</label>
                <input value="@benhNhan.Ten" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="IdBacSi" class="control-label"></label>
                <select asp-for="IdBacSi" class="form-control" asp-items="ViewBag.IdBacSi"></select>
                <span asp-validation-for="IdBacSi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="TransferToDoctor" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
