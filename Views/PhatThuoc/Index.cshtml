@model IEnumerable<Hospital.Models.ToaThuoc>


@{
	ViewData["Title"] = "Phát Thuốc";
}
<div class="row">
	<div class="col-sm-12">
		<h3 class="Title">Danh sách bệnh nhân chờ phát thuốc</h3>
		<hr />
	</div>
</div>
<div class="row">
	<div class="col-sm-4">				
		@foreach (var item in Model)
		{
			<div class="dbox w-100 d-flex align-items-center">
				<h5 class="Ten-BN">
					@Html.ActionLink(item.IdBenhNhanNavigation.Ho + " " +item.IdBenhNhanNavigation.Ten,
				"PhatThuocDetail", new { id = item.Id },
				new {@style="color:#101010;", target = "rightFrame"})
				</h5>
			</div>
		}
	</div>
	<div class="col-sm-8">
		<iframe name="rightFrame" style="width:100%;height:100%;min-height:600px;"></iframe>
	</div>
</div>

